<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:fb="sap.ui.comp.filterbar" xmlns:nav="sap.tnt"
	xmlns:mic="sap.suite.ui.microchart" xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core" xmlns:uni="sap.ui.unified.calendar">
	<Panel height="auto" width="auto" class="sapUiResponsiveMargin">
		<content>
			<Table id="report" inset="false" items="{path: 'ReportModel>/DataCollection'}">
				<headerToolbar>
					<Toolbar>
						<Title text="Quarter Points Summary Report" level="H2"/>
						<ToolbarSpacer/>
						<Title text="Year:" level="H3"/>
						<Text id="idSelectedYear" text="{path: 'ReportModel>/SelectedYear'}"/>
						<Title text="Quarter:" level="H3"/>
						<ComboBox id="comboQuarter" items="{path: '/Collection'}" placeholder="Select..." selectionChange="handleSelectionChange" width="200px">
							<core:Item key="{Quarter}" text="{Key}"/>
						</ComboBox>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="8em">
						<Text text="Request Number"/>
						<footer>
							<Label text="Total Points" design="Bold"/>
						</footer>
					</Column>
					<Column hAlign="Center">
						<Text text="Description"/>
					</Column>
					<Column hAlign="Center">
						<Text text="Close Time"/>
					</Column>
					<Column hAlign="Center">
						<Text text="Status"/>
					</Column>
					<Column hAlign="Center">
						<Text text="Priority"/>
					</Column>
					<Column hAlign="Center">
						<Text text="Customer User"/>
					</Column>
					<Column hAlign="Center">
						<Text text="CustomerID"/>
					</Column>
					<Column hAlign="Center">
						<Text text="Type"/>
					</Column>
					<Column hAlign="Center">
						<Text text="Points"/>
						<footer>
							<Label text="{ReportModel>/TotalPoints}" design="Bold"/>
						</footer>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{ReportModel>Ticket#}"/>
							<Text text="{ReportModel>Title}"/>
							<Text text="{path: 'ReportModel>Close Time', sorter: {path: 'Close Time'}, formatter: 'lhsusext.util.formatter.dateFormat'}"/>
							<Text text="{ReportModel>State}"/>
							<Text text="{ReportModel>Priority}"/>
							<Text text="{ReportModel>Customer User}"/>
							<Text text="{ReportModel>CustomerID}"/>
							<Text text="{ReportModel>Type}"/>
							<Text text="{ReportModel>Points}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
		<l:VerticalLayout width="100%">
			<l:content>
				<Panel class="sapUiMediumMarginTop">
					<headerToolbar>
						<Toolbar>
							<Title level="H2" text="Summary"/>
						</Toolbar>
					</headerToolbar>
					<FlexBox height="30px" alignItems="Start" justifyContent="End">
						<items>
							<Text text="Sustainment Request Points" class="sapUiSmallMarginEnd"/>
							<Text text="{ReportModel>/TotalPoints}" class="sapUiSmallMarginEnd"/>
						</items>
					</FlexBox>
					<FlexBox height="30px" alignItems="Start" justifyContent="End">
						<items>
							<Text text="Other Points" class="sapUiSmallMarginEnd"/>
							<Text text="0" class="sapUiSmallMarginEnd"/>
						</items>
					</FlexBox>
					<FlexBox height="30px" alignItems="Start" justifyContent="End">
						<items>
							<Text text="Reveal BMA Points" class="sapUiSmallMarginEnd"/>
							<Text text="{ReportModel>/RevealSDM}" class="sapUiSmallMarginEnd"/>
						</items>
					</FlexBox>
					<FlexBox height="30px" alignItems="Start" justifyContent="End">
						<items>
							<Label text="Grand Total" design="Bold" class="sapUiSmallMarginEnd"/>
							<Label text="{ReportModel>/GrandTotal}" design="Bold" class="sapUiSmallMarginEnd"/>
						</items>
					</FlexBox>
					<FlexBox height="30px" alignItems="Start" justifyContent="End">
						<items>
							<Text text="Points Consumed" class="sapUiSmallMarginEnd"/>
							<Text text="{ReportModel>/GrandTotal}" class="sapUiSmallMarginEnd"/>
						</items>
					</FlexBox>
					<FlexBox height="30px" alignItems="Start" justifyContent="End">
						<items>
							<Text text="Points Allowed" class="sapUiSmallMarginEnd"/>
							<Text text="{ReportModel>/MonthlyPoints}" class="sapUiSmallMarginEnd"/>
						</items>
					</FlexBox>
					<FlexBox height="30px" alignItems="Start" justifyContent="End">
						<items>
							<Label text="Rollover Points" design="Bold" class="sapUiSmallMarginEnd"/>
							<Label text="{ReportModel>/RolloverPoints}" design="Bold" class="sapUiSmallMarginEnd"/>
						</items>
					</FlexBox>
				</Panel>
